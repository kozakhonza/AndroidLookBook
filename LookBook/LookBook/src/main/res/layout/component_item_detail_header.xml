<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewItem"
        android:src="@drawable/placeholder"
        android:adjustViewBounds="false"
        android:scaleType="centerCrop" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/favoriteBtn"
        android:text="Libi se mi"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_below="@+id/imageViewItem" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffff"
        android:id="@+id/textViewHeader"
        android:layout_alignTop="@+id/imageViewItem"
        android:layout_alignRight="@+id/imageViewItem"
        android:layout_alignEnd="@+id/imageViewItem"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal"
        android:background="#22000000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="1299 Kč"
        android:id="@+id/textViewPrice"
        android:textColor="#ffffff"
        android:layout_alignBottom="@+id/imageViewItem"
        android:layout_alignRight="@+id/imageViewItem"
        android:layout_alignEnd="@+id/imageViewItem"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal"
        android:background="#22000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Popis"
        android:id="@+id/textViewDescription"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/favoriteBtn"
        android:layout_marginTop="12dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextMessageBox"
        android:minLines="1"
        android:hint="@string/hint_write_message"
        android:paddingRight="40dp"
        android:layout_below="@+id/textViewDescription"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/imageViewSendMessage"
        android:layout_alignTop="@+id/editTextMessageBox"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#cdcdcd" />
</RelativeLayout>