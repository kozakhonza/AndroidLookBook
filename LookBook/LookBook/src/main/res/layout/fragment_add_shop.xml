<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#cdcdcd"
    android:padding="8dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/imageView"
            android:layout_gravity="right|top"
            android:background="#cdcdcd"
            android:layout_marginLeft="0dp"
            android:clickable="true"
            android:layout_marginTop="0dp"
            android:minHeight="40dp"
            android:layout_weight="2"
            android:src="@drawable/placeholder"
            android:paddingTop="4dp"
            android:scaleType="centerCrop" />


        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal|bottom"
            android:gravity="top"
            android:layout_weight="3"
            android:paddingLeft="8dp"
            android:paddingRight="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="8dp">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextTitle"
                    android:hint="@string/add_shop_frag_hint_shop_name"
                    android:layout_column="0"
                    android:textColor="#000000"
                    android:inputType="text"
                    android:layout_marginTop="8dp"
                    android:layout_weight="0.8" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextCity"
                    android:hint="@string/add_shop_frag_hint_city"
                    android:layout_column="0"
                    android:textColor="#000000"
                    android:layout_weight="0.8"
                    android:maxWidth="120dp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextShopingCenter"
                    android:hint="@string/add_shop_frag_hint_shopping_center"
                    android:layout_column="0"
                    android:textColor="#000000"
                    android:layout_weight="0.8"
                    android:maxWidth="120dp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:ems="10"
                    android:hint="@string/add_shop_frag_hint_street"
                    android:id="@+id/editTextStreet"
                    android:layout_weight="0.8"
                    android:layout_column="0" />
            </TableRow>
        </TableLayout>

        <Button
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/btn_save"
            android:layout_width="140dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</ScrollView>
